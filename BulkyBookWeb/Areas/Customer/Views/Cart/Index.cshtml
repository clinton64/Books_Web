@model BulkyBook.Models.ViewModel.ShoppingCartVM
<form method="post">
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6">
                        <i class="bi bi-cart-dash"></i> &nbsp;
                        Shopping Cart
                    </div>
                    <div class="col-6 text-end">
                        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-info">Continue Shopping</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @foreach (var item in Model.CartList)
                {
                    <div class="row">
                        <div class="d-none d-lg-block col-lg-1 text-center py-2">
                            <img src="@item.Product.ImageURL" class="rounded" width="100%"/>
                        </div>
                        <div class="col-12 col-lg-6 pt-md-3">
                            <h5><strong>@item.Product.Title</strong></h5>
                            <p><small>@Html.Raw(item.Product.Description)</small></p>
                        </div>
                        <div class="col-12 col-lg-5 text-center row">
                            <div class="col-4 text-md-right pt-4">
                                <h5><strong>@item.Price.ToString("c")
                                    <span class="text-muted">&nbsp;*&nbsp;</span>@item.Count</strong></h5>
                            </div>
                            <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-action="Plus" asp-route-cartId="@item.Id" class="col btn btn-outline-secondary">
                                        <i class="bi bi-plus-circle-fill"></i>
                                    </a>
                                    <a asp-action="Minus" asp-route-cartId="@item.Id" class="col btn btn-outline-secondary">
                                        <i class="bi bi-dash-circle-fill"></i>
                                    </a>
                                </div>
                                <a asp-action="Remove" asp-route-cartId="@item.Id" class="col btn btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <hr/>
                }
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-4 offset-lg-8 pr-4">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <span class="text-info">Total (USD)</span>
                                <span class="text-info"> @Model.CartTotal.ToString("c") </span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-4 offset-lg-8 pr-4">
                        <span class="text-info">Summary</span>
                    </div>
                </div>
            </div>        
        </div>
    </div>
</form>
