@model IEnumerable<Product>
<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
                    <div class="card">
                        <div class="card-img" style="height: 300px; overflow:hidden;">
                            <div class="zoom-effect">
                                <img src="@product.ImageURL" class="card-img-top rounded img-fluid" style="object-fit:cover; width:100%; height:100%;" />
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@product.Title</p>
                                <p class="card-title text-info">by <b> @product.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p>List Price: <strike><b>@product.ListPrice.ToString("c")</b> </strike></p>
                            </div>
                            <div class="pl-1">
                                <p>As low as: <b>@product.Price100.ToString("c")</b></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a class="btn btn-success form-control" asp-action="Details" asp-route-productId="@product.Id">Details</a>
                    </div> 
                </div>
            </div>
        </div>
    }
</div>

<style>
    .zoom-effect {
        position: relative;
        overflow: hidden;
    }

        .zoom-effect img {
            transition: transform 0.3s ease-in-out;
        }

        .zoom-effect:hover img {
            transform: scale(0.9);
        }

    .card-img {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Add hover effect to Details button */
    .details-button {
        transition: background-color 0.3s ease-in-out;
    }

        .details-button:hover {
            background-color: #998888;
        }
</style>
