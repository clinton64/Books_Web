@using BulkyBook.Models;
@model ShoppingCart
<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="card container pt-4">
        <div class="card-header bg-primary text-light ml-0 row">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.Product.Title</h1>
                <p class="text-warning">by @Model.Product.Author</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-info pt-2" style="height:30px">@Model.Product.CoverType.Name</span>
                <span class="badge bg-info pt-2" style="height:30px">@Model.Product.Category.Name</span>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">
                        <div class="row pl-2">
                            <h5 class="text-muted">ISBN : @Model.Product.ISBN</h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-muted">List Price:<strike>@Model.Product.ListPrice.ToString("c") </strike> ISBN</h5>
                        </div>
                        <div class="row">
                            <div class="col-2 bg-secondary border-bottom">
                                <div>Quantity</div>
                            </div>
                            <div class="col-2 bg-secondary border-bottom">
                                <div>1-50</div>
                            </div>
                            <div class="col-2 bg-secondary border-bottom">
                                <div>51-100</div>
                            </div>
                            <div class="col-2 bg-secondary border-bottom">
                                <div>100+</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-2 bg-secondary border-bottom">
                                <div>Price</div>
                            </div>
                            <div class="col-2 bg-secondary border-bottom">
                                <div>@Model.Product.Price.ToString("c")</div>
                            </div>
                            <div class="col-2 bg-secondary border-bottom">
                                <div>@Model.Product.Price50.ToString("c")</div>
                            </div>
                            <div class="col-2 bg-secondary border-bottom">
                                <div>@Model.Product.Price100.ToString("c")</div>
                            </div>
                            <div>
                            </div>
                        </div>
                        <div class="row pl-2">
                            <p class="text-secondary">
                                @Html.Raw(@Model.Product.Description)
                            </p>
                        </div>
                        <div class="row pl-2">
                            <div class="col-2 text-primary">
                                <h4>Count</h4>
                            </div>
                            <div class="col-5 text-primary">
                                <input asp-for="Count" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-4" >
                        <div class="card-img" style="width:300px; height:auto">
                            <img src="@Model.Product.ImageURL" class="card-img-top rounded img-fluid" style="object-fit:cover; width:100%; height:100%;" />
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-6 col-md-6 pb-1">
                    <a class="btn btn-success form-control" asp-action="Index">Back To List</a>
                </div>
                <div class="col-6 col-md-6 pb-1">
                    <button type="submit" value="Add To cart" class="btn btn-primary form-control">Add To Cart</button>
                </div>
            </div>
        </div>
    </div>

</form>
